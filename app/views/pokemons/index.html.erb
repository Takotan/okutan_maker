<p id="notice"><%= notice %></p>

<h1>Pokemons</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Hp</th>
      <th>Atk</th>
      <th>Dfc</th>
      <th>Sat</th>
      <th>Sdf</th>
      <th>Spd</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pokemons.each do |pokemon| %>
      <tr>
        <td><%= pokemon.name %></td>
        <td><%= pokemon.hp %></td>
        <td><%= pokemon.atk %></td>
        <td><%= pokemon.dfc %></td>
        <td><%= pokemon.sat %></td>
        <td><%= pokemon.sdf %></td>
        <td><%= pokemon.spd %></td>
        <td><%= link_to 'Show', pokemon %></td>
        <td><%= link_to 'Edit', edit_pokemon_path(pokemon) %></td>
        <td><%= link_to 'Destroy', pokemon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

